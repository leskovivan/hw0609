@model WebApplication12.Models.Person
@{
    ViewData["Title"] = "Registration";
}

<h2>Registration</h2>

<form asp-action="Index" asp-controller="Person" method="post" novalidate>
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3 form-check">
        <input class="form-check-input" asp-for="TermsOfService" />
        <label class="form-check-label" asp-for="TermsOfService"></label>
        <span class="text-danger" asp-validation-for="TermsOfService"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CreditCardNumber" class="form-label"></label>
        <input asp-for="CreditCardNumber" class="form-control" autocomplete="cc-number" />
        <span class="text-danger" asp-validation-for="CreditCardNumber"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password" autocomplete="new-password" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" autocomplete="new-password" />
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" type="email" autocomplete="email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" autocomplete="tel" />
        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Age" class="form-label"></label>
        <input asp-for="Age" class="form-control" type="number" min="0" />
        <span class="text-danger" asp-validation-for="Age"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control" />
        <span class="text-danger" asp-validation-for="Username"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UniqueUsername" class="form-label"></label>
        <input asp-for="UniqueUsername" class="form-control" />
        <span class="text-danger" asp-validation-for="UniqueUsername"></span>
        <small class="form-text text-muted">Должно быть уникальным (проверка по AJAX).</small>
    </div>

    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Website" class="form-label"></label>
        <input asp-for="Website" class="form-control" placeholder="https://example.com" />
        <span class="text-danger" asp-validation-for="Website"></span>
    </div>

    <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
